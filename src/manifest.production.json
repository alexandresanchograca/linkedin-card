{
  "manifest_version": 3,
  "name": "Business Card Creator",
  "description": "Generates a printable bussiness card based on your linkedin profile",
  "version": "0.0.1",
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["/content.js"]
    }
  ],
  "permissions": ["scripting", "activeTab", "https://www.linkedin.com/*"]
}
